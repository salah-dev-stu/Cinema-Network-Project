<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.RegisterController">
    <children>
        <Label layoutX="50.0" layoutY="50.0" prefHeight="30.0" prefWidth="200.0" text="Name" />
        <TextField fx:id="nameField" layoutX="200.0" layoutY="50.0" prefHeight="30.0" prefWidth="250.0" />

        <Label layoutX="50.0" layoutY="100.0" prefHeight="30.0" prefWidth="200.0" text="Email" />
        <TextField fx:id="emailField" layoutX="200.0" layoutY="100.0" prefHeight="30.0" prefWidth="250.0" />

        <Label layoutX="50.0" layoutY="150.0" prefHeight="30.0" prefWidth="200.0" text="Password" />
        <TextField fx:id="passwordField" layoutX="200.0" layoutY="150.0" prefHeight="30.0" prefWidth="250.0" />

        <Button layoutX="250.0" layoutY="200.0" mnemonicParsing="false" onAction="#registerUser" text="Register" />
    </children>
</AnchorPane>
